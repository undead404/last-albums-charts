---
export interface Props {
  imageSource: string | undefined
}
const { imageSource } = Astro.props;
---
{imageSource ? <>
  <div class="root" style={`background-image: url('${imageSource}')`}></div>
</> : null}

<style>
  .root {
    opacity: 0.2;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -100;
  }
</style>
