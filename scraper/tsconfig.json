{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "node16",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
